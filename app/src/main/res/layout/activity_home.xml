<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="close"
    tools:context=".HomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#000000">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="140dp"
                android:src="@drawable/logo"
                android:tint="@color/cardview_light_background"
                android:scaleX="2.3"
                android:scaleY="2"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_shopping"
                android:id="@+id/shopcart"
                android:onClick="shopcart"
                android:drawableTint="#ffffff"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_hamburger"
                android:drawableTint="#ffffff"
                android:id="@+id/hamburger"
                android:onClick="menu"/>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_menu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="70dp"
            android:visibility="invisible"
            app:menu="@menu/nav_menu"
        />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#000000"
            android:text="ABOUT US" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="190dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/black_curve"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aboutuser"
                android:layout_width="75dp"
                android:layout_height="83dp"
                android:drawableLeft="@drawable/ic_aboutuser"
                android:drawableTint="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="OWNER"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:onClick="shopcart"
                android:gravity="center"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="Manila, Philippines"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="164dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="449dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="ADDRESS" />

        <TextView
            android:id="@+id/owneradd"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="492dp"
            android:text="2401 Taft Ave, Malate Manila, 1004 Metro Manila"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="264dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="539dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="HOW WE STARTED" />

        <TextView
            android:id="@+id/howowner"
            android:layout_width="338dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="582dp"
            android:text="We started blah blah blahddd ddddddddddddddddddddddddddd"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="264dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="630dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="CONTACT US" />

        <TextView
            android:id="@+id/contactowner"
            android:layout_width="338dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="670dp"
            android:text="+639170000000"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/emailowner"
            android:layout_width="338dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="695dp"
            android:text="owner@gmail.com"
            android:textColor="#000000"
            android:textSize="20dp" />
</RelativeLayout>